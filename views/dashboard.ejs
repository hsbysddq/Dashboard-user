  <body>
    <div class="container">
      <h1>My Dashboard</h1>

      <div class="tambah">
        <button type="submit" class="btn" onclick="location.href='/dashboard/add-list'">Tambah List</button>
      </div>

      <div class="flex-container">
        <% books.forEach((book, index) => { %>
        <div class="card col-2">
          <div class="card-body" style="background-color: #ffd8be;">
            <img class="rounded-image" src="img/book.png"/>
            <h5 class="card-title"><%= book.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= book.category %></h6>
            <p class="card-text">Dengan membaca buku tentu dapat mengubah pola pikirmu.</p>
            <button type="submit" class="btn">Edit</button>
            <button type="submit" class="btn">Delete</button>
          </div>
        </div>
        <% })%>
      </div>

    </div>
    

    
    
    
    
    
    
    
    
    
    
